# PLC 설정
PLC_HOST=192.168.1.100
PLC_PORT=1025
PLC_TIMEOUT=5

# Redis 설정 (platform-specific)
# Windows: redis://localhost:6379
# macOS/Linux: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# 애플리케이션 설정
DEBUG=true
LOG_LEVEL=INFO
API_V1_STR=/api/v1

# AI 설정
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=codegemma:7b

# Gemini AI 설정 (CLI 모드)
# 실제 API 키를 입력하세요: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_CLI_MODE=true

# 플랫폼별 설정
# Windows: PLATFORM=windows
# macOS: PLATFORM=macos
# Linux: PLATFORM=linux
PLATFORM=auto

# 개발 모드 설정
DEV_MODE=true
HOST=0.0.0.0
PORT=8000